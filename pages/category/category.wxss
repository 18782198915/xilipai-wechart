.content {
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: row;
}
.left {
  width: 200rpx;
  flex-shrink: 0;
  border-right: 1rpx solid #eee0c0;
}
.right {
  width: 550rpx;
  flex-grow: 1;
}

.category-item {
  font-size: 28rpx;
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.category-item-active {
  background-color: #eee0c0;
}

.goodsWrap-category {
  margin-left: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  border-bottom: 1rpx solid #eee0c0;
  font-size: 28rpx;
}

.goods-item {
  width: 100%;
  display: flex;
  padding: 5px;
  flex-direction: row;
  margin-left: 20rpx;
  align-items: center;
  justify-content: flex-start;
  border-bottom: 1rpx solid #f2f2f2;
}

.goods-pic {
  width: 80px;
  height: 80px;
  flex-shrink: 0;
}

.goods-info {
  display: flex;
  flex-direction: column;
  padding: 0px 5px 0px 5px;
  height: 80px;
}
.goods-container{
  display: flex;
  justify-content: space-between;  
  flex-wrap:wrap;
  box-sizing: content-box;
  padding: 16rpx;
}
.goods-box{
  width: 250rpx;
  overflow: hidden;
}
.goods-box .img-box{
  width: 280rpx;
  height: 220rpx;
  overflow: hidden;
}
.goods-box .img-box image{
   width: 100%;
   height: 100%;
}
.goods-box .goods-title{
  width: 280rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size: 24rpx;
  padding: 24rpx 0 0rpx 0;
  color:#000;
}
.goods-box .goods-subtitle{
  width: 280rpx;
  overflow: hidden;
  font-size: 24rpx;
  padding: 10rpx 0;
}
