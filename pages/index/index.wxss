/* 轮播图 */
.swiper-container{
  width: 750rpx;
  position: relative;  
}
.swiper_box {
  width: 750rpx;
  height:375rpx;
}
swiper-item image {
  width: 750rpx;
  height:375rpx;
}
.swiper-container .dots{  
  position: absolute;  
  left: 0;  
  right: 0;  
  bottom: 20rpx;  
  display: flex;  
  justify-content: center;  
}  
.swiper-container .dots .dot{  
  margin: 0 8rpx;  
  width: 14rpx;  
  height: 14rpx;  
  background: #fff;  
  border-radius: 50%;  
  transition: all .6s;  
  opacity: .5;
}  
.swiper-container .dots .dot.active{  
  width: 14rpx;  
  opacity: 1;
}
.recommend-title {
  text-align: center;
  font-size: 38rpx;
  height: 38rpx;
  line-height: 38rpx;
  margin-top: 50rpx;
  margin-bottom: 20rpx;
}
.goods-container{
  display: flex;
  justify-content: space-between;  
  flex-wrap:wrap;
  box-sizing: content-box;
  padding: 24rpx 0rpx;
}
.goods-box{
  width: 374rpx;
  height: 350rpx;
  overflow: hidden;
  margin-bottom: 4rpx;
  border-radius:5px;
  position: relative;
}
.goods-box .img-box{
  width: 374rpx;
  height: 280rpx;
  overflow: hidden;
  position: relative;
}
.goods-box image{
   width: 100%;
   height: 100%;
}
.goods-box .goods-title{
  width: 280rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size: 24rpx;
  padding-top: 10rpx;
  color:#000;
  margin-left: 24rpx;
}
.goods-box .goods-subtitle{
  width: 280rpx;
  overflow: hidden;
  font-size: 24rpx;
  padding: 10rpx 0;
  margin-left: 24rpx;
}
.weui-cells {
  background:none;
  font-size: 26rpx;
  line-height: 26rpx;
}
.weui-cells image {
  margin-right: 5px;
  vertical-align: middle;
  width:30rpx; 
  height: 30rpx;
}
.overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
  pointer-events: none;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 14px;
}