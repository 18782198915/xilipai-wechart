/* pages/BottomView.wxss */
/* 蒙层 */
.popup-box{
  position: absolute;
  z-index: 99;
  top: 0;
  background-color: rgba(0, 0, 0, 0.5);
  width: 100%;
  height: 100%;
}
/* 下 */
.info-bottom{
  position: fixed;
  z-index: 999;
  width: 100%;
  bottom: 0;
  background-color: white;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  font-size: 14px;
}
/* 自定义内容（根据自己需求更改,可删除） */
.bottom_view_box{
  background: none;
  font-size: 26rpx;
  line-height: 26rpx;
  margin: 30rpx 0;
  background-color: #fff;
  position: relative;
  border-top: 1px solid rgb(217, 217, 217);
  border-bottom: 1px solid rgb(217, 217, 217);
}
.bottom_view_line{
  padding: 10px 15px;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.weui-cell__bd image{
  margin-right: 5px;
  vertical-align: middle;
  width: 30rpx;
  height: 30rpx;
}
.weui-cell__bd{
  display: flex;
}
.bottom_view_line_border:before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1rpx solid #d9d9d9;
  color: #d9d9d9;
  left: 15px;
  border-top-width: 1px;
  border-top-style: solid;
  border-top-color: rgb(217, 217, 217);
}
.row-top{
  line-height: 50px;
  text-align: center;
  position: relative;
}
.row-top-del{
  position: absolute;
  right: 0;
  top: -6px;
}
.row-bottom{
  display: flex;
  justify-content: space-around;
  padding-bottom: 20px;
}
.row-bottom_item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
}
.row-bottom_item image{
  width: 100px;
  height: 100px;
}
