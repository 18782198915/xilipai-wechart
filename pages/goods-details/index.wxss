.goods-image {
  width:750rpx;
  display:block;
  height: 400rpx;
}
.weui-cells {
  background:none;
  font-size: 26rpx;
  line-height: 26rpx;
  padding: 30rpx 0;
}
.weui-cells image {
  margin-right: 5px;
  vertical-align: middle;
  width:30rpx; 
  height: 30rpx;
}


.img_list_box{
  width: 750rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.look_title_box{
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  line-height: 40rpx;
  margin: 0px 30rpx;
  align-items: center;
}
.title{
  font-size: 30rpx;
  line-height: 80rpx;
  font-weight: 500;
}
.describe{
  font-size: 24rpx;
  line-height: 40rpx;
  margin: 20rpx 30rpx;
}
.loadingImgBox {
  transition: opacity 0.4s linear 0.4s;
}